{
  "name": "blocking-io-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",    
    
    "check-types": "tsc --noEmit",
    "check-format:darwin:linux": "prettier --check 'src/**/*.{js,ts,json}'",
    "check-format:win32": "prettier --check src/**/*.{js,ts,json}",
    "eslint:darwin:linux": "eslint 'src/**/*.ts'",
    "eslint:win32": "eslint src/**/*.ts",
    "format:darwin:linux": "prettier --write 'src/**/*.{js,ts,json}'",
    "format:win32": "prettier --write src/**/*.{js,ts,json}",
    "lint:darwin:linux": "npm-run-all eslint:darwin:linux check-format:darwin:linux check-types",    
    "lint:win32": "npm-run-all eslint:win32 check-format:win32 check-types",    

    "start-db": "docker-compose down && docker-compose up -d",
    "start-api": "npx tsc && node dist/index.js",
    "debug-api": "npx ts-node-dev src/index.ts",
    "build": "npx tsc",
    "start": "npm-run-all start-db start-api",
    "debug": "npm-run-all start-db debug-api",
    "test": "jest",

    "update-api-document": "npx swagger-cli bundle --outfile ./src/routes/docs.json ./docs/api.yaml && ./scripts/overwrite-api-document.bash"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@types/pg": "^8.6.1",
    "@types/socket.io": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "^7.0.0",
    "jest": "^27.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "2.4.1",
    "run-script-os": "^1.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "pg": "^8.7.1",
    "socket.io": "^4.2.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2"
  }
}
